<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificaSegnalazione">

    <EditText
        android:id="@+id/textViewDescriptionModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCategorieModifica"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionModifica" />

    <Spinner
        android:id="@+id/spinnerPriorityModifica"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategorieModifica" />

    <Button
        android:id="@+id/buttonCaricaFotoModifica"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="51dp"
        android:onClick="carica"
        android:text="carica foto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPriorityModifica" />

    <Button
        android:id="@+id/buttonModificaSegnalazione"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="74dp"
        android:onClick="modifica"
        android:text="Modifica segnalazione"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toEndOf="@+id/buttonCaricaFotoModifica"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPriorityModifica"
        app:srcCompat="@android:drawable/ic_menu_recent_history" />
</android.support.constraint.ConstraintLayout>